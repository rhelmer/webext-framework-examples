---
import PopUp from "../components/Popup.astro";
---

<html>
	<head>
		<title>Popup</title>
		<script type="module">
			if (typeof browser !== "undefined") {
				import("webextension-polyfill").then(() => {
					console.log("webextension-polyfill loaded successfully");
				});
			} else {
				console.error(
					"This script should only run in a browser extension.",
				);
			}
		</script>
	</head>
	<body>
		<PopUp />
	</body>
</html>
